@page "/register"

<h3>Register User</h3>

<EditForm Model="user" OnSubmit="@AddUserAsync">
    <div class="form-content">
        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <input type="text" class="form-control" placeholder="Firstname *" @bind="user.FirstName" />
                </div>
                <div class="form-group">
                    <input type="text" class="form-control" placeholder="Lastname *" @bind="user.LastName" />
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <input type="text" class="form-control" placeholder="Email *" @bind="user.Email" />
                </div>
                <div class="form-group">
                    <input type="password" class="form-control" placeholder="Confirm Password *" @bind="user.Password" />
                </div>
            </div>
        </div>
        <div>@message</div>
        <button type="submit" class="btnSubmit btn btn-success">Submit</button>
    </div>
</EditForm>

@code {
    UserModel user = new UserModel();
    private HttpResponseMessage result;
    private string message;


    private async Task AddUserAsync()
    {

        try
        {
            user = new UserModel()
            {
                FirstName = user.FirstName,
                LastName = user.LastName,
                Email = user.Email,
                Password = user.Password
            };

            result = await Http.PostAsJsonAsync<UserModel>("https://localhost:44335/api/Users/register", user);

            if (result.IsSuccessStatusCode)
            {
                message = $"User Created";
            }
            else
            {
                message = $"Error, use not created";
            }
        }
        catch { }

    }


}
